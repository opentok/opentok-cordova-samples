<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.otcordovabasicvideochat" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OpenTokCordovaBasicVideoSample</name>
    <description>
        A sample Apache Cordova application that uses OpenTok to power a 1:1 video chat.
    </description>
    <author email="manik@tokbox.com" href="http://tokbox.com">
        Manik Sachdeva
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="com.tokbox.cordova.opentok" spec="https://github.com/opentok/cordova-plugin-opentok" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
